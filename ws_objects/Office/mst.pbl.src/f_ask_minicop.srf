global function boolean f_ask_minicop ();String ls_RunCOP

SELECT ask_for_minicop
  INTO :ls_RunCOP
  FROM parameters		;

If ls_RunCOP = 'Y' Then
	Return TRUE
Else
	Return FALSE
End If
end function

